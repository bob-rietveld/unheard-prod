{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Unheard",
  "version": "0.1.0",
  "identifier": "com.bob-rietveld.unheard",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Unheard",
        "width": 1000,
        "height": 700,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "shadow": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://img.clerk.com; font-src 'self' data:; connect-src 'self' tauri: ipc: http://ipc.localhost https://*.clerk.accounts.dev https://*.clerk.com https://*.convex.cloud https://*.convex.site wss://*.convex.cloud; frame-src https://*.clerk.accounts.dev https://*.clerk.com"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "bob-rietveld",
    "category": "DeveloperTool",
    "shortDescription": "Decision support tool for founders",
    "longDescription": "A decision support tool for founders that provides integrated decision analysis through synthetic data generation, hypothesis testing, and data visualization.",
    "copyright": "Copyright Â© 2025 bob-rietveld. All rights reserved.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/bob-rietveld/unheard-prod/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "YOUR_UPDATER_PUBLIC_KEY_HERE"
    }
  }
}
